<UserControl x:Class="Controls.AboutBetButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="77" Height="36">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="GridOfAboutBetButton" Style="{StaticResource AboutBetButton_NormalEffect}"
          MouseEnter="MouseEnterAction" 
          MouseLeave="MouseLeaveAction">

        <Image x:Name="ButtonTextImage" Source="Images/添加.png" Stretch="None"/>
    </Grid>
</UserControl>
