<UserControl x:Class="Controls.LotteryButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="29" Width="115">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="GridOfLotteryButton">
        <TextBlock x:Name="TextBlockOfLotteryButton" Text="重庆时时彩" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontFamily="/Controls;component/Fonts/simsun.ttc#SimSun" FontSize="14" FontWeight="Bold"
                   Style="{StaticResource FontOfLotteryButton_NormalEffect}"
                   MouseEnter="MouseEnterAction"
                   MouseLeave="MouseLeaveAction"
                   MouseLeftButtonDown="MouseLeftButtonDownAction"/>
    </Grid>
</UserControl>
