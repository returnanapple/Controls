    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Controls" x:Class="Controls.MainTool"
    mc:Ignorable="d"
    Width="1050" Height="680">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="Images/MainBg.png"/>
        </Canvas.Background>


        <local:QuickButton Text="充值" Canvas.Left="22" Canvas.Top="274"/>
        <local:QuickButton Text="提现" Canvas.Left="118" Canvas.Top="274"/>

        <local:NavigationButton Text="会员管理" Canvas.Left="12" Canvas.Top="321"/>
        <local:NavigationButton Text="资金管理" Canvas.Left="12" Canvas.Top="371"/>
