        <local:NavigationButton Text="数据报表" Canvas.Left="12" Canvas.Top="471"/>
        <local:NavigationButton Text="个人中心" Canvas.Left="12" Canvas.Top="521"/>
        <local:NavigationButton Text="积分兑换" Canvas.Left="12" Canvas.Top="571"/>
        <local:NavigationButton Text="在线客服" Canvas.Left="12" Canvas.Top="621"/>

        <local:MinimizeAndExitButton Text="最小化" Canvas.Left="974" Canvas.Top="2"/>
        <local:MinimizeAndExitButton Text="关闭" Canvas.Left="1012" Canvas.Top="2"/>

        <ItemsControl Canvas.Top="66" Canvas.Left="3" Width="1045">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:LotteryButton Text="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


    </Canvas>
</UserControl>
