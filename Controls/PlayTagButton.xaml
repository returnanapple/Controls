<UserControl x:Class="Controls.PlayTagButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="46" Width="83">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="PlayTagGrid" Style="{StaticResource PlayTagButton_NormalEffect}">
        <TextBlock x:Name="PlayTagTextBlock" Text="五星直选" Style="{StaticResource TextOfPlayTagButton_NormalEffect}"
                   FontSize="14" FontFamily="Fonts/simsun.ttc#SimSun"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   MouseEnter="MouseEnterAction"
                   MouseLeave="MouseLeaveAction"
                   MouseLeftButtonDown="MouseLeftButtonDownAction">
        </TextBlock>
    </Grid>
</UserControl>
