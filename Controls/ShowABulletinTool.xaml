<UserControl x:Class="Controls.ShowABulletinTool"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="199" Height="62">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="Images/ShowABulletinTool_Bg.png"/>
        </Grid.Background>

        <TextBlock x:Name="TextBlockOfBulletin" Margin="47,8,7,6" Foreground="#FF8B8B8B" FontSize="12" 
                   FontFamily="Fonts/simsun.ttc#SimSun"
                    TextWrapping="Wrap" TextTrimming="WordEllipsis"
                   LineHeight="16" LineStackingStrategy="BaselineToBaseline"/>
    </Grid>
</UserControl>
